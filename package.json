{
  "name": "killa",
  "version": "0.3.0",
  "description": "State management for Vanilla and React",
  "main": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "default": "./dist/esm/index.js"
      },
      "module": "./dist/esm/index.js",
      "default": "./dist/index.js"
    },
    "./react": {
      "import": {
        "default": "./dist/esm/react.js"
      },
      "module": "./dist/esm/react.js",
      "default": "./dist/react.js"
    },
    "./deep-equals": {
      "import": {
        "default": "./dist/esm/utils/deep-equals.js"
      },
      "module": "./dist/esm/utils/deep-equals.js",
      "default": "./dist/utils/deep-equals.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build:watch": "npx nodemon --exec 'npm run build'",
    "build": "npm run prebuild && node esbuild.config.js",
    "prebuild": "shx rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watchAll",
    "pre-publish": "node pre-publish.js"
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "killa",
    "react",
    "state",
    "management",
    "store"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesuhrz/killa.git"
  },
  "author": "Jesus Hernandez <jesusbeckan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesuhrz/killa/issues"
  },
  "homepage": "https://github.com/jesuhrz/killa#readme",
  "dependencies": {
    "clone": "2.1.2",
    "use-sync-external-store": "1.2.0"
  },
  "devDependencies": {
    "@swc/core": "1.3.31",
    "@swc/jest": "0.2.24",
    "esbuild": "0.17.5",
    "jest": "29.4.1",
    "node-glob": "1.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "shx": "0.3.4",
    "standard": "17.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/standard/eslintrc.json"
    ],
    "env": {
      "jest": true
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/__test__/**",
      "**/example/**",
      "**/dist/**"
    ]
  }
}

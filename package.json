{
  "name": "killa",
  "version": "0.2.0",
  "description": "State management for Vanillajs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run prebuild && node esbuild.config.js",
    "prebuild": "shx rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": ">=14..0"
  },
  "keywords": [
    "killa",
    "state",
    "management",
    "store"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jesuhrz/killa.git"
  },
  "author": "Jesus Hernandez <jesusbeckan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jesuhrz/killa/issues"
  },
  "homepage": "https://github.com/jesuhrz/killa#readme",
  "dependencies": {
    "clone": "2.1.2"
  },
  "devDependencies": {
    "@swc/core": "1.3.31",
    "@swc/jest": "0.2.24",
    "esbuild": "0.17.5",
    "jest": "29.4.1",
    "node-glob": "1.2.0",
    "shx": "0.3.4",
    "standard": "17.0.0"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/standard/eslintrc.json"
    ],
    "env": {
      "jest": true
    }
  }

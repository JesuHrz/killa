{
  "compilerOptions": {
    "target": "es2016",                                /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "module": "es2015",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "killa": ["./src/index.ts"],
      "killa/*": [
        "./src/*",
        "./src/middleware/*",
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "pre-publish.js",
    "jest.config.js",
    "esbuild.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "examples",
  ],
}
